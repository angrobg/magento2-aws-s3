<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Cms\Model\Wysiwyg\Images\Storage">
        <plugin name="st_aws_s3_model_cms_wysiwyg_images_storage_plugin" type="ST\AwsS3\Model\Cms\Wysiwyg\Images\Storage\Plugin" />
    </type>
    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="s3ConfigListCommand" xsi:type="object">ST\AwsS3\Console\Command\ConfigListCommand</item>
                <item name="s3ConfigSetCommand" xsi:type="object">ST\AwsS3\Console\Command\ConfigSetCommand</item>
                <item name="s3StorageSyncCommand" xsi:type="object">ST\AwsS3\Console\Command\StorageSyncCommand</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\MediaStorage\Block\System\Config\System\Storage\Media\Synchronize">
        <plugin name="st_aws_s3_block_mediastorage_system_config_system_storage_media_synchronise_plugin" type="ST\AwsS3\Block\MediaStorage\System\Config\System\Storage\Media\Synchronise\Plugin" />
    </type>
    <type name="Magento\MediaStorage\Helper\File\Storage\Database">
        <plugin name="st_aws_s3_helper_mediastorage_file_storage_database_plugin" type="ST\AwsS3\Helper\MediaStorage\File\Storage\Database\Plugin" />
    </type>
    <type name="Magento\MediaStorage\Model\Config\Source\Storage\Media\Storage">
        <plugin name="st_aws_s3_model_mediastorage_config_source_storage_media_storage_plugin" type="ST\AwsS3\Model\MediaStorage\Config\Source\Storage\Media\Storage\Plugin" />
    </type>
    <type name="Magento\MediaStorage\Model\File\Storage">
        <plugin name="st_aws_s3_model_mediastorage_file_storage_plugin" type="ST\AwsS3\Model\MediaStorage\File\Storage\Plugin" />
    </type>
    <type name="\Magento\MediaStorage\Model\File\Storage\Database">
        <plugin name="st_aws_s3_model_mediastorage_file_storage_database_plugin" type="ST\AwsS3\Model\MediaStorage\File\Storage\Database\Plugin" />
    </type>
    <type name="\Magento\MediaStorage\Model\File\Storage\Directory\Database">
        <plugin name="st_aws_s3_model_mediastorage_file_storage_directory_database_plugin" type="ST\AwsS3\Model\MediaStorage\File\Storage\Directory\Database\Plugin" />
    </type>
    <type name="Magento\MediaStorage\Model\File\Storage\Synchronization">
        <plugin name="st_aws_s3_model_mediastorage_file_storage_synchronisation_plugin" type="ST\AwsS3\Model\MediaStorage\File\Storage\Synchronisation\Plugin" />
    </type>
    <type name="Magento\ProductVideo\Controller\Adminhtml\Product\Gallery\RetrieveImage">
        <arguments>
            <!-- We need to upload the temporary product video thumbnails to S3 -->
            <argument name="fileUtility" xsi:type="object">ST\AwsS3\Model\ResourceModel\MediaStorage\File\Storage\File</argument>
        </arguments>
    </type>
    <type name="Magento\Store\Model\Store">
        <plugin name="st_aws_s3_model_store_store_plugin" type="ST\AwsS3\Model\Store\Store\Plugin" />
    </type>

    <type name="Magento\MediaStorage\Model\File\Uploader">
        <plugin name="st_aws_s3_model_mediastorage_file_uploader_plugin" type="ST\AwsS3\Model\MediaStorage\File\Uploader\Plugin" />
    </type>

</config>
